<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TrackFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_width="50dp"
                 android:id="@+id/back_track"
                android:layout_height="50dp"
                app:icon="@drawable/baseline_arrow_back_24"
                app:iconTint="@color/black"
                app:iconSize="30dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Track Order"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="@font/font1"/>



        </LinearLayout>

   <LinearLayout
       android:visibility="gone"
       android:layout_marginVertical="20dp"
android:gravity="center_horizontal"
       android:layout_marginHorizontal="20dp"
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_height="wrap_content">
       <ImageView

           android:id="@+id/img_tr"
           android:layout_width="135dp"
           android:layout_height="120dp"
           android:scaleType="fitXY"
           android:src="@drawable/img_21" />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
           android:orientation="vertical">

           <TextView
               android:id="@+id/tr_plant_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:layout_marginTop="7dp"
               android:fontFamily="@font/font1"
               android:text="Plant Name"
               android:textColor="@color/black"
               android:textSize="24sp" />


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:orientation="horizontal">

               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="4dp"
                   android:backgroundTint="#DDF4EFEF"
                   android:fontFamily="@font/font1"
                   android:text="Qty=  "
                   android:textSize="14sp" />

               <TextView
                   android:id="@+id/quantity_tr"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="4dp"
                   android:backgroundTint="#DDF4EFEF"
                   android:fontFamily="@font/font1"
                   android:text="0"
                   android:textSize="14sp" />


           </LinearLayout>






               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"

                   android:layout_marginTop="8dp"
                   android:orientation="horizontal">


                   <TextView

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="$"
                       android:textColor="#01B663"
                       android:textSize="22sp"
                       android:textStyle="bold" />


                   <TextView
                       android:id="@+id/price_plant_tr"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="29"
                       android:textColor="#01B663"
                       android:textSize="22sp"
                       android:textStyle="bold" />

               </LinearLayout>




       </LinearLayout>
   </LinearLayout>
<ImageView
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/track"/>

    </LinearLayout>
</FrameLayout>